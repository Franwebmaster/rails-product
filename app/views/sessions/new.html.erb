<div class="container">
    <div class="row">
        <div class="col-xs-12 mt-5">
          <h1 class="text-align">Login</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 col-md-offset-3 col-xs-12 mt-5">
            <div class="jumbotron">
                <%= form_for :session, url: entrar_path, method: :post do |f| %>
        
                <div class="form-group">
                  <%= f.label :email %>
                  <%= f.email_field :email, placeholder: 'Email', class: 'form-control' %>
                </div>
          
                <div class="form-group">
                  <%= f.label :password %>
                  <%= f.password_field :password, placeholder: 'Senha', class: 'form-control' %>
                </div>
          
                <%= f.submit 'Entrar', class: 'btn btn-secondary' %>
          
              <% end %>
            </div>
            
          </div>
       
    </div>
</div>
